{
  "name": "acf-extension",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/acf-extension/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "target": "web",
        "compiler": "babel",
        "outputPath": "dist/apps/acf-extension",
        "extractCss": true,
        "main": "apps/acf-extension/src/background/index.ts",
        "outputFileName": "background.js",
        "additionalEntryPoints": [
          {
            "entryName": "content_scripts",
            "entryPath": "apps/acf-extension/src/content_scripts/index.ts"
          },
          {
            "entryName": "wizard",
            "entryPath": "apps/acf-extension/src/wizard/index.ts"
          },
          {
            "entryName": "wizard-popup",
            "entryPath": "apps/acf-extension/src/wizard/popup/wizard-popup.ts"
          }
        ],
        "styles": ["apps/acf-extension/src/wizard/popup/wizard-popup.scss"],
        "tsConfig": "apps/acf-extension/tsconfig.app.json",
        "isolatedConfig": true,
        "webpackConfig": "apps/acf-extension/webpack.config.js"
      },
      "configurations": {
        "development": {
          "watch": true,
          "extractLicenses": false,
          "optimization": false,
          "sourceMap": true,
          "vendorChunk": true
        },
        "production": {
          "optimization": true,
          "outputHashing": "none",
          "sourceMap": true,
          "namedChunks": false,
          "extractLicenses": true,
          "vendorChunk": false
        }
      }
    },

    "serve": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "development",
      "options": {
        "target": "web",
        "compiler": "babel",
        "outputPath": "dist/apps/acf-extension",
        "extractCss": true,
        "main": "apps/acf-extension/src/background/index.ts",
        "outputFileName": "background.js",
        "additionalEntryPoints": [
          {
            "entryName": "content_scripts",
            "entryPath": "apps/acf-extension/src/content_scripts/index.ts"
          },
          {
            "entryName": "wizard",
            "entryPath": "apps/acf-extension/src/wizard/index.ts"
          },
          {
            "entryName": "wizard-popup",
            "entryPath": "apps/acf-extension/src/wizard/popup/wizard-popup.ts"
          }
        ],
        "styles": ["apps/acf-extension/src/wizard/popup/wizard-popup.scss"],
        "tsConfig": "apps/acf-extension/tsconfig.app.json",
        "isolatedConfig": true,
        "webpackConfig": "apps/acf-extension/webpack.config.js"
      },
      "configurations": {
        "development": {
          "watch": true,
          "extractLicenses": false,
          "optimization": false,
          "sourceMap": true,
          "vendorChunk": true
        },
        "production": {
          "optimization": true,
          "outputHashing": "none",
          "sourceMap": true,
          "namedChunks": false,
          "extractLicenses": true,
          "vendorChunk": false
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/acf-extension/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/acf-extension/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "package": {
      "executor": "@dhruv-techapps/extension:package",
      "dependsOn": ["build"],
      "options": {
        "sourceDir": "dist/apps/acf-extension",
        "artifactsDir": "dist/apps"
      }
    }
  },
  "tags": ["extension"]
}
