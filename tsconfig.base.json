{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["development"],
    "paths": {
      "@acf-options-page/*": ["./apps/acf-options-page/src/*"],
      "@dhruv-techapps/shared-microsoft-oauth": ["./packages/shared/microsoft-oauth/src/index.ts"],
      "@dhruv-techapps/shared-microsoft-excel": ["./packages/shared/microsoft-excel/src/index.ts"]
    }
  }
}
